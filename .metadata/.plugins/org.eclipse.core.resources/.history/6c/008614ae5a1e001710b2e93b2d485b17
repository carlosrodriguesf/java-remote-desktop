package remotedesktop.server;

import java.io.IOException;
import java.io.ObjectOutputStream;

public class ClientDataSender extends Thread {
	private byte[] data;
	private ObjectOutputStream outputStream;
	private ClientDataSenderListener listener;
	
	public ClientDataSender(byte[] data, ObjectOutputStream outputStream, ClientDataSenderListener listener) {
		this.data = data;
		this.outputStream = outputStream;
		this.listener = listener;
	}
	
	@Override
	public void run () {
		try {
			this.listener.onPrepare(this);
			
			this.listener.onStart(this);
			this.outputStream.writeObject(this.data);
			this.outputStream.flush();
			
			this.listener.onSuccess(this);
		} catch (IOException e) {
			this.listener.onError(this, e);
		}
		
		this.listener.onComplete(this);
	}
}
